.detail {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
  padding: 50rpx 100rpx 200rpx;
}
.detail image {
  width: 300rpx;
  margin: 0 auto 60rpx;
}
.detail .address {
  margin-bottom: 56rpx !important;
}
.detail .detail-item {
  font-size: 24rpx;
  margin-bottom: 30rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
}
.detail .detail-item view:first-child {
  width: 180rpx;
  padding-right: 20rpx;
  text-align: right;
  -webkit-flex-shrink: 0;
          flex-shrink: 0;
}
.detail .detail-item view:last-child {
  color: #666;
}
.footer-fixed {
  position: fixed;
  left: 52rpx;
  right: 52rpx;
  height: 158rpx;
  bottom: 0;
  background: #fff;
  z-index: 2;
  border-top: 1px solid #e5e5e5;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-justify-content: space-around;
          justify-content: space-around;
}
.footer-fixed .footer-item {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  padding-top: 24rpx;
  font-size: 20rpx;
}
.footer-fixed .footer-item image {
  width: 64rpx;
  height: 64rpx;
  margin-bottom: 6rpx;
}

